{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist", // Essa configuração cria a pasta ./dist para salvar os arquivos Js.
    "rootDir": "./src", // Essa configuração diz para o compilador qual a pasta raiz dos arquivos Ts.
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
